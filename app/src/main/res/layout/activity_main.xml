<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="407dp"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            android:background="#FFA000"
            android:text="CourtCounter"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <View
            android:id="@+id/vertical_divider"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="#A29292"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_score_team_a"
            app:layout_constraintEnd_toStartOf="@id/tv_score_team_b"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"/>

        <TextView
            android:id="@+id/tv_team_a_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team A"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/tv_score_team_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_team_a_label"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp" />

        <Button
            android:id="@+id/btn_plus_3_team_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+3 POINTS"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_score_team_a"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#FFA000"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/btn_plus_2_team_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+2 POINTS"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_plus_3_team_a"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#FFA000"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/btn_free_throw_team_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FREE THROW"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_plus_2_team_a"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#FFA000"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tv_team_b_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team B"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/tv_score_team_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_team_b_label"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"/>

        <Button
            android:id="@+id/btn_plus_3_team_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+3 POINTS"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_score_team_b"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#FFA000"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/btn_plus_2_team_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+2 POINTS"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_plus_3_team_b"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#FFA000"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/btn_free_throw_team_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FREE THROW"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_plus_2_team_b"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#FFA000"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESET"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="32dp"
            android:backgroundTint="#FFA000"
            android:textColor="#000000"/>

</androidx.constraintlayout.widget.ConstraintLayout>